{
	"manifest_version": 2,
	"name": "Bonk Host",
	"version": "1.0",
	"author": "Salama, (Salamana_)",

	"description": "Adds map playlists to bonk.io",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"*://bonk.io/*"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
		  "matches": [
			"*://bonk.io/gameframe-release.html"
		  ],
		  "js": [
			"loadInjector.js"
		  ],
		  "all_frames": true
		}
	],
	"web_accessible_resources": [
		"injector.js",
		"runInjectors.js"
	]
}